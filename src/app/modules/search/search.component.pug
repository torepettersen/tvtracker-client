
.container
  .row
    .col-md-6
      h1 Add a show
    .col-md-6
      .input-group([formGroup]='searchForm')
        span.input-group-addon Search
        input.form-control(type='text', autofocus, formControlName='search')
  table.table
    //thead
      tr
        th
        th Name
        th Next episode
        th
    tbody
      tr(*ngFor='let show of shows')
        th.th-img
          img.rounded(*ngIf='show.image' ,src='{{show.image.medium}}')
        th
          h4 {{show.name}}
          div([innerHtml]='show.summary')
        th
          .btn-group
            button.btn.btn-success(type="button") Subscribe
            button.btn.btn-info(type="button") Episodes




